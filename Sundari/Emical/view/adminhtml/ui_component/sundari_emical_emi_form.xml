<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">sundari_emical_emi_form.emi_form_data_source</item>
		</item>
		<item name="label" xsi:type="string" translate="true">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button name="back" class="Sundari\Emical\Block\Adminhtml\Emi\Edit\BackButton"/>
			<button name="delete" class="Sundari\Emical\Block\Adminhtml\Emi\Edit\DeleteButton"/>
			<button name="save" class="Sundari\Emical\Block\Adminhtml\Emi\Edit\SaveButton"/>
			<button name="save_and_continue" class="Sundari\Emical\Block\Adminhtml\Emi\Edit\SaveAndContinueButton"/>
		</buttons>
		<namespace>sundari_emical_emi_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>sundari_emical_emi_form.emi_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="emi_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider name="emi_form_data_source" class="Sundari\Emical\Model\Emi\DataProvider">
			<settings>
				<requestFieldName>emi_id</requestFieldName>
				<primaryFieldName>emi_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>General</label>
		</settings>
		<field name="month" formElement="textarea" sortOrder="10">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">emi</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">month</label>
				<dataScope>month</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field name="interest" formElement="textarea" sortOrder="20">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">emi</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">interest</label>
				<dataScope>interest</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field name="gender" formElement="textarea" sortOrder="30">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">emi</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">gender</label>
				<dataScope>gender</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
	</fieldset>
</form>
